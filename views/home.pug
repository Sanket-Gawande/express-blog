doctype html
html
  head 
    style
      include home.css
  body
    include ./partials/header.pug 
 
    div.hero
      div.quote-div
        i.fas.fa-quote-left
        p.quote Bahot rangeen hai jindagi, bss text editor vsCode hona chahiye
        
