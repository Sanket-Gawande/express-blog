doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title post | express-it
body
  include ./partials/header
  .post_body
   .thumbnail
     img.cover-image(
       src="/"+post.thumbnail
       )
     .user
       img(src="/"+ post.profile_pic 
        
        )
       h4=post.username
       p=post.user
       p 21, Apr 2022
     .post-content
       h2=post.tittle
       p.description=post.description
        
include ./partials/footer
  style.
   * {
   margin: 0;
   padding: 0;
   box-sizing: border-box;
   text-decoration: none;
   }
   body{
    //-  background :red;
   }
   .post_body {
   margin: 1rem auto 2rem;
   max-width: 900px;
   min-height : 100vh;
   overflow : auto;
   padding: 1rem;
   }
   .post_body::-webkit-scrollbar{
     display : none;
   }
   .thumbnail {
   height: 200px;
   position: relative;
   width: 100%;
   border-radius: 0.75rem;
   }
   .cover-image {
   width: 100%;
   height: 100%;
   border-radius: 0.75rem;
   object-fit: cover;
   }
   .user {
   position: absolute;
   bottom: -50%;
   width: 150px;
   height: 150px;
   border-radius: 50%;
   transform: translateY(-50%);
   left: 2rem;
   }
   
   .user img {
   background: #eee;
   border: 1px solid #009875;
   padding: .55rem;
   object-fit : cover;
   width: 100%;
   height: 100%;
   border-radius: 50%;
   }
   .user h4 {
   color: #009875;
   padding: 0.25rem 0;
   }
   .user p {
   padding: 0.35rem 0; 
   color: #555;
   font-size: 0.9rem;
   }
   .post-content{
   margin:8rem 0 1rem;
   }
   .post-content h2{
   padding: .55rem 0;
   color: teal;
   }
   .post-content p{
   color: #555;
   padding: 1rem 0 2rem;
   
   }
   @media screen and (max-width : 768px) {
   .post-content{
   padding: 1rem;
   }
   }

